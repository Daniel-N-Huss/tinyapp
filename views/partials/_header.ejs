<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
<!--    <label for="usernameSubmission" class="col-form-label"></label> -->
    <% if(username) { %>
      <form method="POST" action="/logout">
          <div class="form-group row">
            <label class="col-form-label" for="logoutButton" style="padding-right: 10px; margin-top: 15px;">Logged in as: <%=username %></label>
            <button style="margin-right: 10px; margin-top: 15px;" id="logoutButton" class="btn btn-outline-dark">Logout</button>
          </div>
      </form>
      <% } else { %>
    <form method=POST action='/login'>
      <div class="form-group row" >
        <input id="usernameSubmission" placeholder="Username" name="username">
        <button class="btn btn-secondary">Login</button>
        <% } %>
      </div>
    </form>
  </nav>
</header>